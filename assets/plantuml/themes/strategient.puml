' Strategient Architect - PlantUML Theme
' Soft grey canvas - professional, neutral, no warm tones
' Auto-applied to all diagrams

' === General Settings ===
skinparam dpi 150
skinparam shadowing false
skinparam handwritten false
skinparam defaultFontName "Inter, SF Pro Display, Segoe UI, Roboto, sans-serif"
skinparam defaultFontSize 12
skinparam defaultFontColor #2D3748

' === Layout ===
skinparam nodesep 60
skinparam ranksep 50
top to bottom direction

' === Soft Grey Canvas (not pure white) ===
skinparam backgroundColor #F0F2F5

' === Default Element Styling ===
skinparam roundCorner 8

' === Rectangle / Container Styling ===
skinparam rectangle {
    BackgroundColor #E8EAED
    BorderColor #B0B8C1
    BorderThickness 1
    FontColor #2D3748
    FontSize 13
    FontStyle bold
    roundCorner 12
    shadowing false
}

' === Package Styling ===
skinparam package {
    BackgroundColor #E2E5E9
    BorderColor #A8B0BA
    BorderThickness 1
    FontColor #2D3748
    FontSize 13
    FontStyle bold
    roundCorner 10
    shadowing false
}

' === Component Styling (muted blue-grey) ===
skinparam component {
    BackgroundColor #D4E4F7
    BorderColor #6B8BB8
    BorderThickness 1
    FontColor #1E3A5F
    FontSize 12
    roundCorner 6
    shadowing false
}

' === Node Styling ===
skinparam node {
    BackgroundColor #DDE1E6
    BorderColor #8D99A6
    BorderThickness 1
    FontColor #2D3748
    FontSize 12
    roundCorner 8
    shadowing false
}

' === Database Styling (neutral slate) ===
skinparam database {
    BackgroundColor #E0E5EB
    BorderColor #7A8694
    BorderThickness 1
    FontColor #2D3748
    FontSize 12
    shadowing false
}

' === Storage Styling (cool grey-green) ===
skinparam storage {
    BackgroundColor #DEE8E4
    BorderColor #7A9A8A
    BorderThickness 1
    FontColor #2D4A3E
    FontSize 12
    shadowing false
}

' === Queue Styling (cool grey-purple) ===
skinparam queue {
    BackgroundColor #E4E0E8
    BorderColor #8A7A9A
    BorderThickness 1
    FontColor #3E2D4A
    FontSize 12
    shadowing false
}

' === Cloud Styling (light blue-grey) ===
skinparam cloud {
    BackgroundColor #E0EAF4
    BorderColor #7A9ABB
    BorderThickness 1
    FontColor #1E3A5F
    FontSize 12
    shadowing false
}

' === Actor Styling ===
skinparam actor {
    BackgroundColor #F0F2F5
    BorderColor #6B7280
    FontColor #2D3748
    FontSize 12
}

' === Arrow / Connection Styling (neutral grey) ===
skinparam arrow {
    Color #6B7280
    FontColor #4A5568
    FontSize 10
    Thickness 1
}

' === Note Styling (subtle yellow-grey) ===
skinparam note {
    BackgroundColor #F5F6E8
    BorderColor #B0B896
    FontColor #4A4A3A
    FontSize 11
    shadowing false
}

' === Hide UML Noise ===
hide stereotype
hide empty description
hide empty members
hide circle

' === Title Styling ===
skinparam title {
    FontColor #1A202C
    FontSize 18
    FontStyle bold
    BorderThickness 0
}

' === Legend Styling ===
skinparam legend {
    BackgroundColor #E8EAED
    BorderColor #B0B8C1
    FontColor #2D3748
    FontSize 11
}

' === Sequence Diagram ===
skinparam sequence {
    ArrowColor #6B7280
    ArrowFontColor #4A5568
    LifeLineBorderColor #A8B0BA
    LifeLineBackgroundColor #E8EAED
    ParticipantBackgroundColor #D4E4F7
    ParticipantBorderColor #6B8BB8
    ParticipantFontColor #1E3A5F
}

' === Activity Diagram ===
skinparam activity {
    BackgroundColor #D4E4F7
    BorderColor #6B8BB8
    FontColor #1E3A5F
    DiamondBackgroundColor #E0E5EB
    DiamondBorderColor #7A8694
    DiamondFontColor #2D3748
}

' === State Diagram ===
skinparam state {
    BackgroundColor #E8EAED
    BorderColor #A8B0BA
    FontColor #2D3748
}
