' Strategient Architect - PlantUML Theme
' Soft grey canvas - integrates with dark charcoal UI
' Professional, neutral, no warm tones
' Auto-applied to all diagrams

' === General Settings ===
skinparam dpi 150
skinparam shadowing false
skinparam handwritten false
skinparam defaultFontName "Inter, SF Pro Display, Segoe UI, Roboto, sans-serif"
skinparam defaultFontSize 12
skinparam defaultFontColor #2D3748

' === Layout ===
skinparam nodesep 60
skinparam ranksep 50
top to bottom direction

' === Soft Grey Canvas (reduced white glare) ===
skinparam backgroundColor #E8EBEF

' === Default Element Styling ===
skinparam roundCorner 8

' === Rectangle / Container Styling ===
skinparam rectangle {
    BackgroundColor #D8DCE2
    BorderColor #A0A8B2
    BorderThickness 1
    FontColor #2D3748
    FontSize 13
    FontStyle bold
    roundCorner 12
    shadowing false
}

' === Package Styling ===
skinparam package {
    BackgroundColor #D4D8DE
    BorderColor #9AA2AC
    BorderThickness 1
    FontColor #2D3748
    FontSize 13
    FontStyle bold
    roundCorner 10
    shadowing false
}

' === Component Styling (muted blue-grey, reduced saturation) ===
skinparam component {
    BackgroundColor #C8D4E4
    BorderColor #7088A8
    BorderThickness 1
    FontColor #2A4060
    FontSize 12
    roundCorner 6
    shadowing false
}

' === Node Styling ===
skinparam node {
    BackgroundColor #D0D4DA
    BorderColor #888F98
    BorderThickness 1
    FontColor #2D3748
    FontSize 12
    roundCorner 8
    shadowing false
}

' === Database Styling (neutral slate) ===
skinparam database {
    BackgroundColor #D2D8DE
    BorderColor #7A848E
    BorderThickness 1
    FontColor #2D3748
    FontSize 12
    shadowing false
}

' === Storage Styling (cool neutral grey) ===
skinparam storage {
    BackgroundColor #D4DAD8
    BorderColor #7A8882
    BorderThickness 1
    FontColor #2D3E38
    FontSize 12
    shadowing false
}

' === Queue Styling (cool neutral grey) ===
skinparam queue {
    BackgroundColor #D8D4DA
    BorderColor #887A8E
    BorderThickness 1
    FontColor #382D3E
    FontSize 12
    shadowing false
}

' === Cloud Styling (muted blue-grey) ===
skinparam cloud {
    BackgroundColor #D0DAE8
    BorderColor #7088A0
    BorderThickness 1
    FontColor #2A4060
    FontSize 12
    shadowing false
}

' === Actor Styling ===
skinparam actor {
    BackgroundColor #E8EBEF
    BorderColor #6B7280
    FontColor #2D3748
    FontSize 12
}

' === Arrow / Connection Styling (neutral grey, readable but quiet) ===
skinparam arrow {
    Color #6B7280
    FontColor #4A5568
    FontSize 10
    Thickness 1
}

' === Note Styling (soft neutral) ===
skinparam note {
    BackgroundColor #E8E9E4
    BorderColor #A0A298
    FontColor #3A3A38
    FontSize 11
    shadowing false
}

' === Hide UML Noise ===
hide stereotype
hide empty description
hide empty members
hide circle

' === Title Styling ===
skinparam title {
    FontColor #1A202C
    FontSize 18
    FontStyle bold
    BorderThickness 0
}

' === Legend Styling ===
skinparam legend {
    BackgroundColor #D8DCE2
    BorderColor #A0A8B2
    FontColor #2D3748
    FontSize 11
}

' === Sequence Diagram ===
skinparam sequence {
    ArrowColor #6B7280
    ArrowFontColor #4A5568
    LifeLineBorderColor #9AA2AC
    LifeLineBackgroundColor #D8DCE2
    ParticipantBackgroundColor #C8D4E4
    ParticipantBorderColor #7088A8
    ParticipantFontColor #2A4060
}

' === Activity Diagram ===
skinparam activity {
    BackgroundColor #C8D4E4
    BorderColor #7088A8
    FontColor #2A4060
    DiamondBackgroundColor #D2D8DE
    DiamondBorderColor #7A848E
    DiamondFontColor #2D3748
}

' === State Diagram ===
skinparam state {
    BackgroundColor #D8DCE2
    BorderColor #9AA2AC
    FontColor #2D3748
}
